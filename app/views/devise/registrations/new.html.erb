<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'pure-form pure-form-aligned' }) do |f| %>
  <%= f.error_notification %>
  <fieldset>
    <%= f.input :email, autofocus: true %>
    <%= f.input :password, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
    <%= f.input :password_confirmation, required: true %>

  </fieldset>

  <div class="pure-controls">
    <%= f.button :submit, "Sign up", class: 'pure-button pure-button-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
