<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'pure-form pure-form-aligned' }) do |f| %>
  <fieldset>
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    
  </fieldset>

  <div class="pure-controls">
    <label class="pure-checkbox">
      <%= f.input_field :remember_me, as: :boolean, boolean_style: :inline %>
      Remember Me
    </label>
    <%= f.button :submit, "Log in", class: 'pure-button pure-button-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
